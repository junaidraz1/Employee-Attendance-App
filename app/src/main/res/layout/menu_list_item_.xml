<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF"
    android:layoutDirection="locale">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/layout_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txt_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:textColor="#585858" />

                <View
                    android:layout_width="120dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/txt_edit"
                    android:layout_marginTop="5dp"
                    android:background="#8E8D8D" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/changePasswordLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_edit"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp">

                <TextView
                    android:id="@+id/changePassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Change Password"
                    android:textColor="#585858"
                    android:textSize="@dimen/_10ssp" />

                <View
                    android:id="@+id/view"
                    android:layout_width="120dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/changePassword"
                    android:layout_marginTop="5dp"
                    android:background="#8E8D8D" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/changePasswordLayout"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp">

                <TextView
                    android:id="@+id/tv_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/settings_txt"
                    android:textColor="#585858"
                    android:textSize="@dimen/_10ssp" />

                <View
                    android:id="@+id/viewSettings"
                    android:layout_width="120dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tv_settings"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="#8E8D8D" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/logoutLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_settings"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp">

                <TextView
                    android:id="@+id/logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/logout_txt"
                    android:textColor="#585858"
                    android:textSize="@dimen/_10ssp" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="120dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/logout"
                    android:layout_marginTop="5dp"
                    android:background="#8E8D8D" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/versionLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logoutLayout"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp">

                <TextView
                    android:id="@+id/version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/version_txt"
                    android:textColor="@color/hint"
                    android:textSize="@dimen/_10ssp" />

            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>